import discord
from discord.ext import commands
import os

# Intents
intents = discord.Intents.default()
intents.message_content = True

# Bot ayarlarÄ±
bot = commands.Bot(
    command_prefix="!",
    intents=intents
)

# Bot hazÄ±r olunca
@bot.event
async def on_ready():
    print(f"{bot.user} olarak giriÅŸ yaptÄ±k!")
    await bot.change_presence(
        activity=discord.Game(name="!yardÄ±m | Discord Botu")
    )

# HatalarÄ± yakalama
@bot.event
async def on_command_error(ctx, error):
    if isinstance(error, commands.CommandNotFound):
        await ctx.send("âŒ BÃ¶yle bir komut yok.")
    elif isinstance(error, commands.BadArgument):
        await ctx.send("âŒ GeÃ§ersiz argÃ¼man kullandÄ±n.")
    else:
        await ctx.send("âš ï¸ Bir hata oluÅŸtu.")
        print(error)

# Merhaba komutu
@bot.command()
async def hello(ctx):
    await ctx.send(f"ğŸ‘‹ Merhaba {ctx.author.mention}! Ben bir Discord botuyum!")

# heh komutu
@bot.command()
async def heh(ctx, count: int = 5):
    if count > 50:
        await ctx.send("âŒ En fazla 50 heh yazabilirim!")
        return

    await ctx.send("he" * count)

# Ping komutu
@bot.command()
async def ping(ctx):
    await ctx.send(f"ğŸ“ Pong! Gecikme: {round(bot.latency * 1000)}ms")

# YardÄ±m komutu
@bot.command()
async def yardÄ±m(ctx):
    await ctx.send(
        "**ğŸ“Œ Komutlar:**\n"
        "`!hello` â†’ Selam verir\n"
        "`!heh [sayÄ±]` â†’ he he yazar\n"
        "`!ping` â†’ Bot gecikmesini gÃ¶sterir"
    )

# TOKEN (env Ã¶nerilir)
bot.run("TOKEN_BURAYA")
